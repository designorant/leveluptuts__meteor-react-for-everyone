{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "plugins": [
    "react",
    "meteor"
  ],
  "env": {
    "browser": true,
    "node": true,
    "meteor": true
  },
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:meteor/recommended"
  ],
  "rules": {
    "meteor/eventmap-params": [
      2, { "templateInstanceParamName": "instance" }
    ],
    "import/no-unresolved": [
      2, { "ignore": ["^meteor/"] }
    ]
  }
}
